
extends layout


block content

    h1 Update Book
        form(method='post' action=`/books/${data.id}`)
            p
                label(for='title') Title
                input#title(name='title' type='text' value=data.title)
            p
                label(for='author') Author
                input#author(name='author' type='text' value=data.author)
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value=data.genre)
            p
                label(for='year') Year
                input#year(name='year' type='text' value=data.year)
            p
                input(type='submit' value='Update Book')
        form(method='post' action=`/books/${data.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
            p
                a.button(href='all_books.html') Cancel
            p
                input(type='submit' value='Delete Book')
